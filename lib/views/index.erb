<!DOCTYPE html>
  <head>
    <link rel="stylesheet" href="main.css">
    <title>Regretsy</title>
  </head>
    <body>
    <div class="container">
      <header>
        <img src="etsy-logo.png">
        <form action="/search" method="post">
          <input type="text" name="search_term" value="Search for items or shops">
          <input type="submit" value="Search">
        </form>
      </header>
      <nav>
          <h4>Show results for:</h4>
          <ul>
            <li>All Categories</li>
            <ul>
                <li><a href="/">Home & Living</a></li>
                <li><a href="/">Art & Collectibles</a></li>
                <li><a href="/">Weddings</a></li>
                <li><a href="/">Clothing</a></li>
                <li><a href="/">Paper & Party Supplies</a></li>
                <li><a href="/">Jewelry</a></li>
                <li><a href="/">Accessories</a></li>
                <li><a href="/">Craft Supplies & Tools</a></li>
                <li><a href="/">Bags & Purses</a></li>
                <li><a href="/">Bath & Beauty</a></li>
                <li><a href="/">Shoes</a></li>
                <li><a href="/">Books, Movies & Music</a></li>
                <li><a href="/">Electronics & Accessories</a></li>
                <li><a href="/">Toys & Games</a></li>
                <li><a href="/">Pet Supplies</a></li>
              </ul>
          </ul>
      </nav>
        <section>
            <% data.each do |item|%>
                  <ul class="item">
                    <li class="image"><img src="<%= item["Images"].first["url_170x135"] %>"></li>
                    <li class="title"><%= item["title"] %></>
                    <!--<li class="shop"><%= item["Shop"]["shop_name"] %></li>
                    <li class="price">$<%= item["price"] %> <%= item["currency_code"] %></li>-->
                    <li class="image-footer"><span class="shop"><%= item["Shop"]["shop_name"] %> </span><span class="price"><%= item["price"] %></span></li>
                </ul>

            <% end %>
        </section>
    </div>
    </body>
</html>